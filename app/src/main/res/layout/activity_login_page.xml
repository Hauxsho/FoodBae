<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodbaelogin"
    tools:context=".LoginPage">

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:id="@+id/loginll">

        <EditText
            android:id="@+id/editlogphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timberline"
            android:hint="Phone Number"
            android:textColorHint="#16291E"
            android:inputType="phone"
            ></EditText>

        <EditText
            android:id="@+id/editlogpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timberline"
            android:hint="Password"
            android:textColorHint="#16291E"
            android:inputType="textPassword"
            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginll"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp">

        <Button
            android:id="@+id/btnloginmain"
            android:layout_width="123dp"
            android:layout_height="55dp"
            android:layout_below="@+id/loginll"
            android:background="@drawable/custom_button"
            android:elevation="8dp"
            android:fontFamily="@font/timberline"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="InvalidId"
            tools:visibility="visible"></Button>
    </LinearLayout>


</RelativeLayout>